<p id="notice"><%= notice %></p>
<center>
<h1>Time Offs</h1>

<table>
  <thead>
    <tr>
      <th>From date</th>
      <th>To date</th>
      <th>Note</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_offs.each do |time_off| %>
      <tr>
         <% if current_user.admin? %>
          <td><%= "#{time_off.user.first_name} #{time_off.user.last_name}" %></td>
        <% end %>
        <td><%= time_off.from_date %></td>
        <td><%= time_off.to_date %></td>
        <td><%= time_off.note %></td>
       
        <td><%= link_to 'Show', time_off %></td>
        <td><%= link_to 'Edit', edit_time_off_path(time_off) %></td>
        <td><%= link_to 'Destroy', time_off, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</center>

<center>
<%= link_to 'New Time Off', new_time_off_path %>
</center>
